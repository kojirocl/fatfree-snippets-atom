'.text.html.basic':
    'F3 BASE url':
        'prefix': 'fbase'
        'body': """<base href="{{ @BASE . '/' .@UI }}" />"""
    'F3 check temlpate':
        'prefix': 'fcheck'
        'body':"""
            <check if="{{ isset(@${1:value})}}">
            	<true>
            		${2:html}
            	</true>
            </check>
        """
'.source.coffee':
  'medio snippet':
    'prefix': 'asnip'
    'body': """
    'F3 ${1:nombre}':
        'prefix':'${2:trigger}'
        'body':'${3:codigo}'
        'description':''
    """
